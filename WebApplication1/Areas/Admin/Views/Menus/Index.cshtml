                @Html.DisplayFor(modelItem => item.ModifiedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <a class="btn btn-primary rounded" asp-action="Edit" asp-route-id="@item.MenuId">Edit</a> |
                    <a class="btn btn-danger rounded" asp-action="Details" asp-route-id="@item.MenuId">Details</a> |
                <a class="btn btn-primary rounded" asp-action="Delete" asp-route-id="@item.MenuId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

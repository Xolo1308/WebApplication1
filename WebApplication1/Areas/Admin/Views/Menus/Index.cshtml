@model IEnumerable<WebApplication1.Models.TblMenu>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Quan lý menu</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Simple Tables</li>                                                                                                                                                                       
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title"><a asp-action="Create">Them moi</a></h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Tieu de </th>
                                        <th>Alias</th>
                                        <th>Cap</th>
                                        <th>Vi tri </th>
                                        <th>Hien thi</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 1;
                                    }
                                    @foreach(var item in Model)
                                    {
                                        <tr>
                                            <td>@(i++)</td>
                                            <td>@Html.DisplayFor(ModelItem => item.Title)</td>
                                            <td>
                                                @Html.DisplayFor(ModelItem => item.Alias)
                                            </td>
                                            <td>@Html.DisplayFor(ModelItem => item.Levels)</td>
                                            <td>@Html.DisplayFor(ModelItem => item.Position)</td>
                                            <td>@Html.DisplayFor(ModelItem => item.IsActive)</td>
                                            <td>
                                                <a class="btn btn-primary rounded" a asp-action="Edit" asp-route-id="@item-MenuId" class="btn btn-primary">Sửa</a>
                                                <a class="btn btn-primary rounded" a asp-action="Details" asp-route-id="@item-MenuId" class="btn btn-primary">Chi tiết </a>
                                                <a class="btn btn-primary rounded" a asp-action="delete" asp-route-id="@item-MenuId" class="btn btn-primary">Xóa</a>
                                            </td>
                                        </tr>
                                       
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    <!-- /.card -->                 
                </div>
                <!-- /.col -->              
            </div>
            <!-- /.row -->         
            <!-- /.row -->
        </div><!-- /.container-fluid -->
        </div>
    </section>
    <!-- /.content -->
</div>
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alias)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Levels)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
